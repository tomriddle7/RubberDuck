<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ca9ae"
	android:orientation="vertical" >
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
			android:orientation="vertical"
			android:layout_margin="30dp" 
			android:gravity="center" >
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="#2ca9ae"
					android:orientation="vertical" 
					android:gravity="center" >
				    <Button
				        android:id="@+id/buttonAutoGrab"
				        android:layout_width="100dp"
				        android:layout_height="100dp"
				        android:background="@drawable/config_autograb" />
				</LinearLayout>
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="#2ca9ae"
					android:orientation="vertical" 
					android:gravity="center" >
				    <Button
				        android:id="@+id/buttonAutoRelease"
				        android:layout_width="100dp"
				        android:layout_height="100dp"
				        android:background="@drawable/config_autorelease" />
				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
			    <LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="#2ca9ae"
					android:orientation="vertical" 
					android:gravity="center" >
				    <Button
				        android:id="@+id/buttonGrab"
				        android:layout_width="100dp"
				        android:layout_height="100dp"
				        android:background="@drawable/config_grab" />
				</LinearLayout>
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="#2ca9ae"
					android:orientation="vertical" 
					android:gravity="center" >
				    <Button
				        android:id="@+id/buttonRelease"
				        android:layout_width="100dp"
				        android:layout_height="100dp"
				        android:background="@drawable/config_release" />
				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="#2ca9ae"
					android:orientation="vertical" 
					android:gravity="center" >
				    <Button
				        android:id="@+id/buttonRotateLeft"
				        android:layout_width="100dp"
				        android:layout_height="100dp"
				        android:background="@drawable/config_rotateleft" />
				</LinearLayout>
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="#2ca9ae"
					android:orientation="vertical" 
					android:gravity="center" >
				    <Button
				        android:id="@+id/buttonRotateRight"
				        android:layout_width="100dp"
				        android:layout_height="100dp"
				        android:background="@drawable/config_rotateright" />
				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="#2ca9ae"
					android:orientation="vertical" 
					android:gravity="center" >
				    <Button
				        android:id="@+id/buttonNone"
				        android:layout_width="100dp"
				        android:layout_height="100dp"
				        android:background="@drawable/config_none" />
				</LinearLayout>
			</LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>